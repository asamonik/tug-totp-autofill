{
  "manifest_version": 2,
  "name": "TU Graz OTP Auto-Fill",
  "version": "1.0.0",
  "description": "Automatically fills OTP codes for TU Graz Single Sign-On",
  "permissions": ["storage", "https://auth.tugraz.at/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://auth.tugraz.at/*"],
      "js": ["totp.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tugraz-otp@example.com"
    }
  }
}
